{
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
    "editor.columnSelection": true,
    "editor.guides.bracketPairs": true,
    "editor.mouseWheelZoom": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.fontFamily": "'JetBrains Mono', 'monospace', monospace",
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.minimap.autohide": true,
    "editor.snippetSuggestions": "bottom",
    "workbench.startupEditor": "readme",
    "workbench.editor.autoLockGroups": {
        "imagePreview.previewEditor": true,
        "latex-workshop-pdf-hook": true,
        "quarto.visualEditor": true,
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultKeybindings": true,
    "extensions.ignoreRecommendations": true,
    "terminal.external.linuxExec": "WezTerm",
    "terminal.integrated.enableImages": true,
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.mouseWheelZoom": true,
    "notebook.markup.fontFamily": "JetBrains Mono",
    "emmet.useInlineCompletions": true,
    "emmet.showSuggestionsAsSnippets": true,
    "git.enableSmartCommit": true,
    "git.ignoreLegacyWarning": true,
    "git.ignoreLimitWarning": true,
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.autoClean.run": "onSucceeded",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.view.outline.sync.viewer": true,
    "latex-workshop.latex.external.build.command": "xelatex",
    "git.openRepositoryInParentFolders": "always",
    "latex-workshop.linting.run": "onType",
    "latex-workshop.view.pdf.ref.viewer": "external",
    "latex-workshop.view.pdf.viewer": "external",
    "markdown.occurrencesHighlight.enabled": true,
    "markdown.validate.enabled": true,
    "quarto.assist.updateMode": "live",
    "quarto.visualEditor.spellingDictionary": "en_GB"
}